<file path="build.gradle">
plugins {
    id 'application'
    id 'checkstyle'
    id 'jacoco'
    id 'org.gradle.toolchains.foojay-resolver-convention' version '0.8.0' // Auto-provisionamento de JDKs
}

java {
    toolchain {
        languageVersion = JavaLanguageVersion.of(21)
        vendor = JvmVendorSpec.ADOPTIUM // Ou Adoptium/BellSoft/Azul conforme desejado
    }
}

application {
    mainClass = 'main.Main'
}

repositories {
    mavenCentral()
}

dependencies {
    // Testes modernos
    testImplementation 'org.junit.jupiter:junit-jupiter:5.10.2'
}

test {
    useJUnitPlatform()
    finalizedBy jacocoTestReport
}

jacocoTestReport {
    dependsOn test
    reports {
        xml.required = true
        html.required = true
    }
}

checkstyle {
    toolVersion = "10.12.4"
    configFile = file('checkstyle.xml')
}
</file>

